<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/vien_duoi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ic_changes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/txt_money_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_changes"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_toEndOf="@+id/ic_changes"
        android:layout_toRightOf="@+id/ic_changes"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_date_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_ghichu_L"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="-11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_ghichu_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_money_L"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="16dp"
        android:text="TextView" />
</RelativeLayout>