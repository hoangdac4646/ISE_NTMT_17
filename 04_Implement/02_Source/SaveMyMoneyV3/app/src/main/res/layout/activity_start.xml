<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:background="#fbfcfb"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:layout_weight="10"
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button

            android:textColor="#23b450"
            android:id="@+id/Btn_dk"
            android:background="@drawable/drawable_vienbutton"
            android:text="Lần đầu sử dụng Save my Money"
            android:layout_width="250dp"
            android:layout_height="35dp"
            />
        <Button
            android:layout_marginTop="5dp"
            android:background="@drawable/drawable_vienbutton"
            android:textColor="#23b450"
            android:id="@+id/Btn_dn"
            android:text="Đã sử dụng Save my Money"
            android:layout_width="250dp"
            android:layout_height="35dp"
            />
    </LinearLayout>
</LinearLayout>