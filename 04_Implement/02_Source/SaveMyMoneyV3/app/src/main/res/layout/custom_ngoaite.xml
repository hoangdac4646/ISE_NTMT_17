<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/vien_duoi"
    android:weightSum="2"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_NgoaiTeQG"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/usa" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_NgoaiTeTenQg"
            android:layout_marginBottom="4dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:layout_alignTop="@+id/img_NgoaiTeQG"
            android:text="USA"
            android:textAppearance="@style/TextAppearance.AppCompat" />
        <TextView
            android:textSize="10dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/tv_NgoaiTemieuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:text="Us dollar" />
    </LinearLayout>




</LinearLayout>