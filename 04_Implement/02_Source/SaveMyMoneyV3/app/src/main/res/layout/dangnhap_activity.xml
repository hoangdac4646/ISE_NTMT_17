<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_width="127dp"
            android:layout_height="118dp"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Chào mừng bạn đến với Save My Money" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên tài khoản"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/edt_name"
        android:background="@drawable/drawable_vienbutton"
        android:layout_width="280dp"
        android:layout_height="32dp"
        android:ems="14"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="20dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/edt_pass"
        android:background="@drawable/drawable_vienbutton"
        android:layout_width="280dp"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:layout_height="32dp"
        android:ems="14"
        android:inputType="textPassword"
       />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/check_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi nhớ tài khoản"
            />
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_dangnhap"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/drawable_vienbutton"
        android:text="Đăng nhập " />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/tv_dangki"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Chưa có tài khoản? Nhấn vào đây để đăng kí." />


</LinearLayout>