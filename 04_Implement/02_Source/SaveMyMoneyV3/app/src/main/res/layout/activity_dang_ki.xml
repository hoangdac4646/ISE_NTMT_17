<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="6"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                />
            <TextView
                android:textColor="#d50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="* "
                />
        </LinearLayout>

        <EditText
            android:layout_marginTop="3dp"
            android:padding="4dp"
            android:ems="12"
            android:id="@+id/edt_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33c4c4cb"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                />
            <TextView
                android:textColor="#d50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="* "
                />
        </LinearLayout>

        <EditText
            android:layout_marginTop="3dp"
            android:padding="4dp"
            android:ems="12"
            android:id="@+id/edt_hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33c4c4cb"
            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                />
            <TextView
                android:textColor="#d50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="* "
                />
        </LinearLayout>
        <EditText
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:ems="12"
            android:id="@+id/edt_pass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33d5d5d5"
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu"
                />
            <TextView
                android:textColor="#d50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="* "
                />
        </LinearLayout>
        <EditText
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:ems="12"
            android:id="@+id/edt_pass2"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33cacacb"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            />
        <EditText
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:ems="12"
            android:id="@+id/edt_sdt"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33bebec0"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#d50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* "
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Thông tin bắt buộc nhập"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="180dp"
            android:text="Đăng kí"
            android:id="@+id/Btn_dangki"
         android:layout_height="wrap_content" />
     <Button
         android:layout_width="wrap_content"
         android:text="Hủy"
         android:id="@+id/Btn_huy"
         android:layout_height="wrap_content" />
 </LinearLayout>





</LinearLayout>