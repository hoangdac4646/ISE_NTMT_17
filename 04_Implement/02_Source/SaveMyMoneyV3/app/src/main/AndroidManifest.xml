<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.black.savemymoneyv3">

    <uses-permission
        android:name="android.permission.INTERNET"
        />
    <uses-permission android:name="FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".mClass.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name=".DangNhap.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DangNhap.DangKiActivity" />
        <activity android:name=".mActivity.AddWallet" />
        <activity android:name=".DangNhap.DangNhapActivity" />
        <activity android:name=".mActivity.WalletInfoActivity" />
        <activity android:name=".mActivity.AddPlanActivity" />
        <activity android:name=".mActivity.AboutUsActivity" />
        <activity android:name=".mActivity.AddMoneyActivity" />
        <activity android:name=".DangNhap.AdminActivity" />
        <activity android:name=".mActivity.BorrowActivity" />
        <activity android:name=".mActivity.AddBorrowActivity"></activity>

        <service android:name=".mServer.BorrowService">
            <intent-filter>
                <action android:name="NOTIFICATION_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>