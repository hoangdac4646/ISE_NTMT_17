<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroups"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mFragment.Home_Fragment">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="#6ff17e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sum_money_3" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/textView1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền" />
        <TextView
            android:id="@+id/txt_sum_money_main"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/textView1"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tổng Quan"
            android:textColor="@color/colorblack"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Số dư đầu tháng "
                android:textColor="@color/colorblack"
                android:textSize="20dp" />

            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VNĐ"
                android:textColor="@color/maincolor" />
            <ImageView
                android:src="@drawable/icon_up"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="Số dư cuối tháng "
                android:textColor="@color/colorblack"
                android:textSize="20dp" />

            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0 VNĐ"
                android:textColor="@color/colorRed" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_down_1" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:textSize="20dp"
        android:textColor="@color/colorblack"
        android:text="Các Kế Hoạch Trong Ngày "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </android.support.v4.view.ViewPager>
</LinearLayout>